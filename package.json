{
  "name": "neon",
  "version": "1.0.0",
  "description": "Minimal file explorer UI built with Electron and React",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run compile && concurrently \"npm run start\" \"cd renderer && npm run dev\"",
    "build": "tsc && cd renderer && npm run build",
    "electron-dev": "ELECTRON_IS_DEV=true npm run dev",
    "compile": "tsc"
  },
  "keywords": [
    "electron",
    "react",
    "file-explorer",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
