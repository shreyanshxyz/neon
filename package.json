{
  "name": "neon",
  "version": "1.0.0",
  "description": "Basic Electron application",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w & NODE_ENV=development electron .",
    "dev:renderer": "vite"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "electron": "^25.0.0"
  }
}
